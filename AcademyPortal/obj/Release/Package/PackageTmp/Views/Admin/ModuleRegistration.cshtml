@model AcademyPortalBoLayer.Module

@{
    ViewBag.Title = "ModuleRegistration";
}

<h1>@Html.Raw(@TempData["Msg"])</h1>

<h3><i>Module Registration</i></h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Technology, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Technology, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Technology, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Proficiency Level", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.RadioButtonFor(model => model.proficiencyLevel, "Beginner")
            Beginner

            @Html.RadioButtonFor(model => model.proficiencyLevel, "Intermediate")
            Intermediate

            @Html.RadioButtonFor(model => model.proficiencyLevel, "Advance")
            Advance
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Execution Type", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.executionType, "Select Execution Type", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.executionType, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Certification Type", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.certificationType, "Select Certification Type", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.certificationType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.certificationName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.certificationName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.certificationName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Register" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Dashboard", "Dashboard")
</div>
